# ============================================
# Vite Development Server Configuration
# ============================================

VITE_PORT=5173
VITE_HOST=::
VITE_OPEN=true

# ============================================
# Build Configuration
# ============================================

VITE_BUILD_TARGET=es2023
VITE_MINIFY=esbuild
VITE_SOURCEMAP=false
VITE_CSS_CODE_SPLIT=true

# ============================================
# Build Performance & Analysis
# ============================================

VITE_CHUNK_SIZE_WARNING_LIMIT=1000
VITE_REPORT_COMPRESSED_SIZE=false

# ============================================
# E2E Testing Configuration (Playwright)
# ============================================

E2E_BASE_URL=http://localhost:5173
CI=false

# ============================================
# Application Environment Variables
# ============================================
# Add application-specific variables below. All variables that need to be
# exposed to the client must be prefixed with VITE_.
#
# Example placeholders:
VITE_APP_NAME=Screaming Architecture Starter
VITE_APP_VERSION=1.0.0

# Google Analytics
VITE_ANALYTICS_ENABLED=false
VITE_GA_MEASUREMENT_ID=
VITE_GA_DEBUG=false
VITE_GA_DATALAYER_NAME=dataLayer

# Google Maps
VITE_GOOGLE_MAPS_API_KEY=google-maps-api-key

# API_BASE_URL and analytics keys are managed via public/runtime-config.json.
# Provide values there to avoid rebuilds when deploying.
