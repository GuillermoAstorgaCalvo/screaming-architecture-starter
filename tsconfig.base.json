{
	"compilerOptions": {
		"target": "ES2023",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"moduleDetection": "force",
		"verbatimModuleSyntax": true,
		"strict": true,
		"exactOptionalPropertyTypes": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"useDefineForClassFields": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"jsx": "react-jsx",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowJs": false,
		"checkJs": false,
		"noEmit": true,
		"lib": ["ES2023", "DOM", "DOM.Iterable"],
		"baseUrl": ".",
		"paths": {
			"@app/*": ["src/app/*"],
			"@core/*": ["src/core/*"],
			"@core/ui/*": [
				"src/core/ui/*",
				"src/core/ui/forms/*",
				"src/core/ui/navigation/*",
				"src/core/ui/data-display/*",
				"src/core/ui/feedback/*",
				"src/core/ui/overlays/*",
				"src/core/ui/layout/*",
				"src/core/ui/media/*",
				"src/core/ui/utilities/*"
			],
			"@domains/*": ["src/domains/*"],
			"@e2e/*": ["e2e/*"],
			"@infra/*": ["src/infrastructure/*"],
			"@shared/*": ["src/shared/*"],
			"@styles/*": ["src/styles/*"],
			"@tests/*": ["tests/*"],
			"@src-types/*": ["src/types/*"]
		}
	}
}
